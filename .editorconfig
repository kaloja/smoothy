# ---------------------------------------------------------
# Unifying the coding style for different editors
#
# Read more:
# editorconfig.org
# ---------------------------------------------------------

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[{package.json,*.yml}]
indent_style = space
indent_size = 2
